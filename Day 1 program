#program 5:
Fib <- numeric(10)
Fib[1] <- Fib[2] <- 1
for (i in 3:10) Fib[i] <- Fib[i - 2] + Fib[i - 1]
print("First 10 Fibonacci numbers:")
print(Fib)

#program 6:
prime_numbers <- function(n) 
  {
  if (n >= 2) 
    {
    x = seq(2, n)
    prime_n = c()
    for (i in seq(2, n)) 
      {
      if (any(x == i)) 
        {
        prime_n = c(prime_n, i)
        x = c(x[(x %% i) != 0], i)
      }
    }
    return(prime_n)
  }
  else 
  {
    stop("Input number should be at least 2.")
  }
} 
prime_numbers(12)

#program 7:
for (i in 1:100)
  {
  if (i%%3==0 & i%%5==0)
    {print("FizzBuzz")}
  else if (i%%3==0)
    {print("Fizz")}
  else if(i%%5==0)
    {print("Buzz")}
    else 
      print(i)
   }

